
<div class="side-overlay">
    <div class="buttons">
        {{#paper-button raised=true mini=true onClick=(action "findOwnPos")}}{{paper-icon "gps-fixed"}}{{/paper-button}}
        {{#paper-button raised=true mini=true onClick=(action "zoomIn")}}{{paper-icon "add-circle-outline"}}{{/paper-button}}
        {{#paper-button raised=true mini=true onClick=(action "zoomOut")}}{{paper-icon "remove-circle-outline"}}{{/paper-button}}
    </div>
</div>

<div class="bottom-overlay">
    <div class="buttons layout-row">
        <div class="flex">
            {{#paper-sidenav-toggle name="left" as |toggleAction|}}
                {{#paper-button raised=true mini=true onClick=(action toggleAction)}}{{paper-icon "reorder"}}{{/paper-button}}
            {{/paper-sidenav-toggle}}
        </div>

        <div class="flex-nogrow share-on-icon">
            {{#if watchPos}}
                <a href="" {{action "stopPosWatch"}} title="Kartan keskitys päällä">{{paper-icon "gps-fixed" size=40}}</a>
            {{/if}}
        </div>

        {{#if locationshare.enabled}}
            <div class="flex-nogrow share-on-icon">
                <a href="" {{action "stopShare"}} title="Sijainnin jako päällä">{{paper-icon "speaker-phone" size=40}}</a>
            </div>
        {{/if}}


    </div>
</div>


<div id="map"></div>

